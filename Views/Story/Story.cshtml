
    
@model IEnumerable<Hello_Travellers.Models.Post>
<style>
    .post-container {
        padding-top: 40%;
        padding-left: 5px;
        padding-right: 5px;
        background: rgb(0, 0, 0); /* Fallback color */
        background: rgba(0, 0, 0, 0.5); /* Black background with 0.5 opacity */
        border-radius: 10px
    }

   
        
</style>

<div class="row m-2">


    @foreach (var item in Model)
    {
       

     <div class="col-md-4">
        <a style="text-decoration: none " href=@Url.Action("ViewPost", "Post", new { PostID = item.PostID })>
        <div class="bg-image home-content" style="background-image: url( '@Url.Content("~/Images/img1.jpg")');


          background-size: cover;
          border-radius: 10px;
          background-repeat: no-repeat;
          background-position: center;">

            <div class="post-container">
                <h4 class="title text-white">@Html.DisplayFor(modelItem => item.Title)</h4>
               
            </div>




        </div>
         
            </a> 
      </div>

            
    }


</div>
