<style>
    body {
        width: 100%;
        height: 100%;
        background-color: #f5f5dc;
    }

    .hq-input {
        outline: none;
        border-radius: 30px;
        border: 2px solid #e7e7e7;
        width: 100%;
        height: 50px;
    }

        .hq-input:focus {
            outline: none;
            border-color: #3498db;
        }

    .input-group-text {
        border-radius: 30px;
    }
</style>


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="signin-container">

    <img src="~/Images/pass.png">
    @using (Html.BeginForm("ForgotPassword", "UserAuth"))

    {

        <div class="signup-input-group">

            <input type="email" placeholder="Email" name="Email" required>

        </div>


        <div class="signup-input-group">
            <button name="submit" id="submit" class="SigninBtn">Enter</button>
        </div>




    }
</div>


@{
    if (ViewBag.forgotPassValid != null)
    {


        <script>

            swal("", "Email is not registered", "error");

        </script>

    }
}

