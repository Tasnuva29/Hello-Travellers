@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!------ Include the above in your HEAD tag ---------->
<style>
    .contact-form {
        background: rgba(232,238,255,1);
        margin-top: 5%;
        margin-bottom: 5%;
        width: 50%;
        box-shadow: 7px 10px 7px -1px rgba(217,217,217,1);
    }

        .contact-form .form-control {
            border-radius: 1rem;
            outline: none;
        }

    .contact-image {
        text-align: center;
    }

        .contact-image img {
            border-radius: 6rem;
            width: 11%;
            margin-top: -3%;
        }

    .contact-form form {
        padding: 14%;
    }

        .contact-form form .row {
            margin-bottom: -7%;
        }

    .contact-form h3 {
        margin-bottom: 8%;
        margin-top: -10%;
        text-align: center;
        color: #0062cc;
    }

    .contact-form .btnContact {
        width: 50%;
        border: none;
        border-radius: 1rem;
        padding: 1.5%;
        background: #21BCA8;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
    }

        .contact-form .btnContact:hover {
            background-color: #066163;
        }

    .btnContactSubmit {
        width: 50%;
        border-radius: 1rem;
        padding: 1.5%;
        color: #fff;
        background-color: #0062cc;
        border: none;
        cursor: pointer;
    }
</style>
<div class="container contact-form">
    <div class="contact-image">
        <img src="~/Images/ban.jpg" alt="contact" />
    </div>
    <form method="post">
        <h3>Access Denied</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group mb-2 d-flex justify-content-md-center">
                    You have been banned and hence can not log in to our website!
                </div>               
                <div class="form-group mb-sm-2 d-flex justify-content-center mt-2">
                    <a class="btnContact text-center" href="@Url.Action("Login", "UserAuth")">Go back</a>
                </div>
            </div>            
        </div>
    </form>
</div>

