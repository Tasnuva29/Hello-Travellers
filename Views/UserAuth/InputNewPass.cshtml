
<style>
    body {
        width: 100%;
        height: 100%;
        background-color: #f5f5dc;
    }

    .hq-input {
        outline: none;
        border-radius: 30px;
        border: 2px solid #e7e7e7;
        width: 100%;
        height: 50px;
    }

        .hq-input:focus {
            outline: none;
            border-color: #3498db;
        }

    .input-group-text {
        border-radius: 30px;
    }
</style>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@{
    if (ViewBag.newpassvalid != null)
    {


        <script>

            swal("", "Password Updated", "success");

        </script>

    }
}



<div class="signin-container">
    <img src="~/Images/pass.png">
    @using (Html.BeginForm("InputNewPass", "UserAuth"))

    {
        <div class="input-group">
            <input type="password" placeholder="Password" name="newpass" id="myInput1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
                   title="Must be 6 digit with A-Z,a-z,digit"
                   class="form-control hq-input"
                   required>
            <i class="input-group-text bi bi-eye-slash" id="togglePassword1" onclick="showPass(); showPassword(this.id, 'inputNewPassword')"></i>

        </div>


        <div class="signup-input-group">
            <button name="submit" id="submit" class="SigninBtn">Enter</button>
        </div>




    }
</div>

<script>
    function showPass() {
        var x = document.getElementById("myInput1");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }

</script>
